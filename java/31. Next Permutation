class Solution {
    public void nextPermutation(int[] nums) {
        int n=nums.length;
        int i=n-1;
        for(;i>0;i--){
            if(nums[i]>nums[i-1])
                break;
        }
        if(i==0){
            reverse(nums,0,n-1);
            return;
        }
        int j=n-1;
        for(;j>0;j--){
            if(nums[j]>nums[i-1])
                break;
        }
        int temp=nums[j];
        nums[j]=nums[i-1];
        nums[i-1]=temp;
        if(i==n-1) return;
        reverse(nums,i,n-1);
        return;
    }
    void reverse(int[] nums,int s,int e){
        while(s<=e){
            int temp=nums[s];
            nums[s]=nums[e];
            nums[e]=temp;
            s++;
            e--;
        }
        return;
    }
}
